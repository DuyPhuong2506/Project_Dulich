    const filterData = [
        {
            id: "priceLst",
            label: "Giá",
            opt: "100",
        },
        {
            id: "rateLst",
            label: "Sao",
            opt: "5 sao",
        },
        {
            id: "saleLst",
            label: "Ưu đãi",
            opt: "100",
