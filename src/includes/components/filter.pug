        {
            id: "transportLst",
            label: "Loại tàu",
            opt: "Tau lua",
        },
        {
            id: "brandLst",
            label: "Hãng",
            opt: "VN Airline",
        },
        {
            id: "bedLst",
            label: "Giường",
            opt: "Giường 1 tầng",
        },
        {
