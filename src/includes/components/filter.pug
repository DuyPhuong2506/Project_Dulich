            label: "Tiện nghi",
            opt: "Giường 1 tầng",
        },
    ]

mixin filter(shorten = false)
    .filter-section
        .container
            .row
                .col-lg-12
                    .filter
                        span.filter__label Bộ lọc
                        - var i = 0
                        - var j = 4
                        if shorten === false
                            - j = 7
                        .filter__detail
                            while i < j
                                select(id=filterData[i].id, name=filterData[i].id)
                                    option(selected disabled)=filterData[i].label
                                    each num in [1, 2, 3]
                                        option(value="num")=filterData[i].opt
                                - ++i