.cano-section
    div(class="bannner-section banner-cano" style="background-image: url('./assets/images/banner/cano.jpg');")
        .container
            .row
                .col-lg-12
                    include ../components/banner.pug
                    +banner("Cano","4",false,true)
    include ../components/breadcrumb.pug
    +bread-crumb("Cano")
    .box-cano-section
        .container
            .row
                .col-xl-10.col-lg-12
                    .box-cano-detail
                        include ../components/box-cano.pug
                        +box__cano(2)
                        each item in [1,2]
                            include ../components/box-cano.pug
                            +box__cano(3)
                .col-xl-2.col-lg-12
                    .box-cano-partner
                        .box-cano-partner__item
                            img(src="./assets/images/box-cano/partner-1.png" alt="")
                        .box-cano-partner__item
                            img(src="./assets/images/box-cano/partner-2.png" alt="")
                        .box-cano-partner__item
                            img(src="./assets/images/box-cano/partner-3.png" alt="")
                        .box-cano-partner__item
                            img(src="./assets/images/box-cano/partner-4.png" alt="")
    .cano-section-line
    include ../components/box-discover.pug
    +box-discover("Khám phá nhiều hơn nữa cùng AZCUISE","Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Quis ipsum suspendisse  gravida. ","./assets/images/box-kham-pha/vinh-di-san.png")
    include ../components/happy-client.pug
    include ../components/box-partner.pug