    const menuDatas = [
        {
            menuCategory: 'Tàu thăm vịnh',
            link: "./tau-tham-vinh-desktop.html",
            subMenu: 'submenu',
        },
        {
            menuCategory: 'Du thuyền',
            link: "./du-thuyen-desktop.html",
        },
        {
